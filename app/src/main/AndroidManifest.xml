<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cdu145.tickets">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="tickets.TicketsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tickets.Splash"
        tools:ignore="AllowBackup">

        <activity android:name="tickets.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="tickets.hint.restoring.DeleteRestoringHintBroadcastReceiver"/>
    </application>

</manifest>